<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abdelmeged.ahmed.networkitotest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Kotlin activities -->
        <activity android:name=".kotlin.ArchActivity" />
        <activity android:name=".kotlin.NormalActivity" />
        <activity android:name=".kotlin.ArchActivity2" />
        <activity android:name=".kotlin.NormalActivity2" />

        <!-- Java activities -->
        <activity android:name=".java.ArchActivity" />
        <activity android:name=".java.ArchActivity2" />
        <activity android:name=".java.NormalActivity" />
        <activity android:name=".java.NormalActivity2" />
        <activity android:name=".java.RxActivity" />
        <activity android:name=".kotlin.RxActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>